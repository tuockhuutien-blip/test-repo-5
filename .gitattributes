# Auto detect text files and perform LF normalization
* text=auto

# Source code
*.ts text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.mjs text eol=lf

# Web files
*.html text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.sass text eol=lf
*.less text eol=lf

# Configuration files
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf
*.conf text eol=lf
*.config text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf
*.rst text eol=lf

# Git files
.gitignore text eol=lf
.gitattributes text eol=lf
.gitmodules text eol=lf

# Package manager files
package.json text eol=lf
package-lock.json text eol=lf
yarn.lock text eol=lf
pnpm-lock.yaml text eol=lf

# TypeScript configuration
tsconfig.json text eol=lf
tsconfig.*.json text eol=lf
tslint.json text eol=lf

# ESLint configuration
.eslintrc text eol=lf
.eslintrc.json text eol=lf
.eslintrc.js text eol=lf

# Prettier configuration
.prettierrc text eol=lf
.prettierrc.json text eol=lf
.prettierrc.js text eol=lf

# Environment files
.env* text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Windows batch files
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.webp binary
*.bmp binary
*.tiff binary

# Font files
*.woff binary
*.woff2 binary
*.ttf binary
*.otf binary
*.eot binary

# Archives
*.zip binary
*.tar binary
*.gz binary
*.7z binary
*.rar binary

# Database files
*.db binary
*.sqlite binary
*.sqlite3 binary

# Audio/Video files
*.mp3 binary
*.mp4 binary
*.avi binary
*.mov binary
*.wmv binary
*.flv binary
*.wav binary

# Document files
*.pdf binary
*.doc binary
*.docx binary
*.xls binary
*.xlsx binary
*.ppt binary
*.pptx binary

# Exclude files from exporting
.gitattributes export-ignore
.gitignore export-ignore
.github/ export-ignore
docs/ export-ignore
test/ export-ignore
tests/ export-ignore
*.test.* export-ignore
*.spec.* export-ignore

# Language-specific diff patterns
*.ts diff=typescript
*.js diff=javascript
*.json diff=json
*.md diff=markdown

# Merge drivers for generated files
package-lock.json merge=ours
yarn.lock merge=ours
